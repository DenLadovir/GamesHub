<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GAME HUB</title>

    <!-- Основные CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Шрифты -->
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&family=Orbitron:wght@500&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Анимации -->
    <style>
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(78, 204, 163, 0.7);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(78, 204, 163, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(78, 204, 163, 0);
            }
        }
    </style>

    <!-- Секция для дополнительных стилей из представлений -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <div class="container d-flex justify-content-between align-items-center py-3">
            <span class="logo">GAME <span class="text-accent">HUB</span></span>
            <nav class="d-flex gap-4">
                <a href="/" class="nav-link"><i class="bi bi-house-door"></i> ГЛАВНАЯ</a>
                <a href="/Feedback" class="nav-link"><i class="bi bi-chat-square-text"></i> ОБРАТНАЯ СВЯЗЬ</a>

                @await Html.PartialAsync("_LoginPartial")
            </nav>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer>
        <div class="container text-center py-3">
            <div class="social-links mb-3">
                <a href="#" class="text-accent mx-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-accent mx-2"><i class="bi bi-discord"></i></a>
                <a href="#" class="text-accent mx-2"><i class="bi bi-steam"></i></a>
            </div>
            <div class="text-muted">
                &copy; @DateTime.Now.Year - GAME HUB | Все права защищены
            </div>
        </div>
    </footer>

    <!-- Основные JS-библиотеки -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Инициализация анимаций -->
    <script>
        $(document).ready(function() {
            // Анимация пунктов меню
            $('.nav-link').each(function(i) {
                $(this).css({
                    'opacity': '0',
                    'animation': `fadeInUp 0.5s ease-out forwards ${i * 0.1 + 0.3}s`
                });
            });
        });
    </script>

    <!-- Секция для дополнительных скриптов из представлений -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>