@model Games.Models.GameFilterViewModel

<h2>Фильтрация игр</h2>

<form method="get" asp-action="Filtering">
    <div class="form-group">
        <label for="Title">Название</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Жанры</label>
        <select asp-for="SelectedGenreIds"
                asp-items="@(new MultiSelectList(Model.AllGenres, "Id", "Name", Model.SelectedGenreIds))"
                multiple
                class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label for="Year">Год выхода</label>
        <input asp-for="Year" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Применить</button>
</form>

<hr />

<h3>Результаты</h3>
@if (Model.Games.Any())
{
    <ul>
        @foreach (var game in Model.Games)
        {
            <li>
                <b>@game.Title</b> — @game.ReleaseDate.Year
                <br />
                Жанры:
                @string.Join(", ", game.GameGenres.Select(gg => gg.Genre.Name))
            </li>
        }
    </ul>
}
else
{
    <p>Нет игр по заданным параметрам.</p>
}