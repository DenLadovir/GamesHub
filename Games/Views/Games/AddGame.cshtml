@model Games.Models.Game
@{
    ViewData["Title"] = "Добавить игру";
}

<div class="container mt-5">
    <h2>Добавить новую игру</h2>

    <form asp-controller="Games" asp-action="AddGame" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Жанры</label>
            <div class="form-check">
                @foreach (var genre in ViewBag.AllGenres as List<Games.Models.Genre> ?? new List<Games.Models.Genre>())
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="selectedGenres"
                               value="@genre.Id"
                               id="genre_@genre.Id"
                               @(Model.SelectedGenreIds != null && Model.SelectedGenreIds.Contains(genre.Id) ? "checked" : "") />
                        <label class="form-check-label" for="genre_@genre.Id">@genre.Name</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ReleaseDate" class="form-label"></label>
            <input asp-for="ReleaseDate" type="date" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Добавить игру</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}