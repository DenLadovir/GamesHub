@using System.Globalization
@model Games.Models.Game
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="card-title mb-0">@Model.Title</h1>
                <div>
                    <a asp-controller="Games" asp-action="EditGame" asp-route-id="@Model.Id"
                       class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Редактировать
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="fw-bold">Жанр:</span>
                        @if (Model.GameGenres != null && Model.GameGenres.Any())
                        {
                            @string.Join(", ", Model.GameGenres.Select(gg => gg.Genre?.Name ?? "Неизвестно"))
                        }
                        else
                        {
                            <span class="text-muted">Жанры не указаны</span>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <span class="fw-bold">Дата выхода:</span>
                        <span>@Model.ReleaseDate.ToString("D", new CultureInfo("ru-RU"))</span>
                    </div>
                </div>
            </div>

            <div class="description-block border-top pt-3">
                <h5 class="fw-bold">Описание игры:</h5>
                <div class="p-3 bg-light rounded">
                    @Html.Raw(Model.Description?.Replace("\r\n", "<br />") ?? "Описание отсутствует")
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">ID: @Model.Id</small>
                <div>
                    <a asp-controller="Games" asp-action="DeleteGame" asp-route-id="@Model.Id"
                       class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Удалить
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> На главную
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            padding: 1.25rem;
        }

        .info-item {
            margin-bottom: 0.5rem;
        }

        .badge {
            font-size: 0.9em;
            padding: 0.35em 0.65em;
        }
    </style>
}