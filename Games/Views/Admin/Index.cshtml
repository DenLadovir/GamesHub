@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<h2>Список пользователей</h2>

<p>
    <a asp-action="CreateUser" class="btn btn-success">Создать пользователя</a>
</p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Изменить роли</a>
                    <a asp-action="ChangePassword" asp-route-userId="@user.Id" class="btn btn-sm btn-warning">Сменить пароль</a>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" style="display:inline" asp-antiforgery="true">
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2>Импорт данных</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Загрузить игры</h4>
        <form asp-controller="File" asp-action="UploadGamesJson" method="post" enctype="multipart/form-data">
            <input type="file" name="file" accept=".json" class="form-control mb-2" />
            <button type="submit" class="btn btn-primary">Загрузить JSON</button>
        </form>
        <form asp-controller="File" asp-action="UploadGamesCsv" method="post" enctype="multipart/form-data" class="mt-2">
            <input type="file" name="file" accept=".csv" class="form-control mb-2" />
            <button type="submit" class="btn btn-primary">Загрузить CSV</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Загрузить жанры</h4>
        <form asp-controller="File" asp-action="UploadGenresJson" method="post" enctype="multipart/form-data">
            <input type="file" name="file" accept=".json" class="form-control mb-2" />
            <button type="submit" class="btn btn-success">Загрузить JSON</button>
        </form>
        <form asp-controller="File" asp-action="UploadGenresCsv" method="post" enctype="multipart/form-data" class="mt-2">
            <input type="file" name="file" accept=".csv" class="form-control mb-2" />
            <button type="submit" class="btn btn-success">Загрузить CSV</button>
        </form>
    </div>
</div>